---
import { HiArrowRight } from "react-icons/hi";
const { photo, name, description } = Astro.props;
---

<div
    class="mx-auto flex max-w-4xl flex-col-reverse items-stretch gap-6 md:flex-row"
>
    <div class="hover-3d md:w-1/3">
        <!-- Card -->
        <figure
            class="bg-base-900 rounded-2xl overflow-hidden border-none p-0 shadow-lg drop-shadow-[4px_4px_0_#7836cf]"
        >
            <img
                src={photo.src}
                alt={`Foto de ${name.split(" ")[0]}`}
                class="w-full h-full object-cover"
            />
        </figure>

        <!-- Divs necesarios para el efecto 3D -->
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>

    <div
        class="bg-gray-900 border-none flex w-full flex-col justify-center rounded-2xl border p-6 shadow-lg md:w-2/3 drop-shadow-[4px_4px_0_#7836cf]"
    >
        <h2
            class="text-white text-4xl font-bold drop-shadow-[2px_2px_0_#7836cf]"
        >
            {name}
        </h2>
        <p class="mt-2 font-semibold">
            {description}
        </p>

        <a
            href="/about"
            class="group mt-4 inline-flex items-center text-primary font-bold transition-all"
        >
            Ver más sobre mí
            <HiArrowRight
                className="ml-1 transition-transform duration-200 group-hover:translate-x-1"
                size={18}
            />
        </a>
    </div>
</div>
